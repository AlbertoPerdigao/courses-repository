   "source": [
    "import pyautogui\n",
    "import time\n",
    "\n",
    "# Passo a passo\n",
    "\n",
    "#pyautogui.click -> click com mouse\n",
    "#pyautogui.write -> escrever um texto\n",
    "#pyautogui.press -> apertar uma tecla\n",
    "#pyautogui.hotkey -> apertar uma combinacao de teclas\n",
    "\n",
    "pyautogui.PAUSE = 2\n",
    "\n",
    "# Passo 1: Entrar no sistema da empresa (Link)\n",
    "\n",
    "# Abrir o browser\n",
    "pyautogui.press(\"win\")\n",
    "pyautogui.write(\"edge\")\n",
    "pyautogui.press(\"enter\")\n",
    "\n",
    "# Entrar no sistema\n",
    "#pyautogui.hotkey(\"ctrl\", \"t\")\n",
    "pyautogui.write(\"https://pages.hashtagtreinamentos.com/aula1-intensivao-sistema\")\n",
    "pyautogui.press(\"enter\")\n",
    "\n",
    "# Esperar o navegador carregar\n",
    "time.sleep(5)\n",
    "\n",
    "# Passo 2: Fazer login\n",
    "\n",
    "pyautogui.click(x=1842, y=1149) # Campo de usuario\n",
    "pyautogui.write(\"meu_login\")\n",
    "pyautogui.click(x=1819, y=1261) # Campo de senha\n",
    "pyautogui.write(\"minha_senha\")\n",
    "pyautogui.click(x=1847, y=1374) # Acessar\n",
    "\n",
    "time.sleep(3)\n",
    "\n",
    "# Passo 3: Exportar base de dados\n",
    "\n",
    "pyautogui.click(x=2399, y=1149) # Botao de download do arquivo\n",
    "time.sleep(3)\n",
    "\n",
    "pyautogui.press(\"esc\")\n",
    "pyautogui.hotkey(\"ctrl\", \"W\") # Fecha o browser"
   ]
  },
